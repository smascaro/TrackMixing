<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smascaro.trackmixing">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:name=".TrackMixingApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.TM.NoActionBar">
        <activity
            android:name=".main.view.MainActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.TM.NoActionBar.TranslucentStatusBar"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="ACTION_LAUNCH_PLAYER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".player.PlayerActivity"
            android:theme="@style/AppTheme.TM.NoActionBar.TranslucentStatusBar" />
        <activity
            android:name=".settings.view.SettingsActivity"
            android:exported="false">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".settings.testdata.download.view.DownloadTestDataActivity"
            android:theme="@style/Theme.MaterialComponents.Dialog" />
        <service android:name="com.smascaro.trackmixing.playback.service.MixPlayerService" />
    </application>


</manifest>